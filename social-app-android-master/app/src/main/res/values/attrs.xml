<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <declare-styleable name="ExpandableTextView">
        <attr name="maxCollapsedLines" format="integer" />
        <attr name="animDuration" format="integer" />
        <attr name="animAlphaStart" format="float" />
        <attr name="expandText" format="string" />
        <attr name="collapseText" format="string" />
    </declare-styleable>

    <declare-styleable name="CircularImageView">
        <attr name="border" format="boolean" />
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="shadow" format="boolean" />
        <attr name="shadow_color" format="color" />
        <attr name="shadow_radius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="SocialButton">
        <attr name="social" format="enum">
            <enum name="facebook" value="0" />
            <enum name="google" value="1" />
            <enum name="dropbox" value="2" />
            <enum name="flicker" value="3" />
            <enum name="foursquare" value="4" />
            <enum name="instagram" value="5" />
            <enum name="linkedin" value="6" />
            <enum name="odnoklassniki" value="7" />
            <enum name="pinterest" value="8" />
            <enum name="quora" value="9" />
            <enum name="tumblr" value="10" />
            <enum name="twitter" value="11" />
            <enum name="vine" value="12" />
            <enum name="vkontakte" value="13" />
            <enum name="whatsapp" value="14" />
            <enum name="youtube" value="15" />
        </attr>
        <attr name="iconSize" format="dimension" />
        <attr name="iconPadding" format="dimension" />
        <attr name="iconCenterAligned" format="boolean" />
        <attr name="roundedCorner" format="boolean" />
        <attr name="transparentBackground" format="boolean" />
        <attr name="roundedCornerRadius" format="dimension" />
        <attr name="android:textColor" tools:ignore="ResourceName" />
    </declare-styleable>
</resources>